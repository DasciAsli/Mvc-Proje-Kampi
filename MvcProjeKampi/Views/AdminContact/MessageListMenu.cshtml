
<div class="col-md-3">
    <a href="/AdminMessage/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/AdminContact/Index/" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> İletişim Mesajlar
                        @if (@ViewBag.ContactMessageCount > 0)
                        {
                            <span class="badge bg-primary float-right">@(ViewBag.ContactMessageCount)</span>
                        }

                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/AdminMessage/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        @if (@ViewBag.MessageInboxCount > 0)
                        {
                            <span class="badge bg-primary float-right">@(ViewBag.MessageInboxCount)</span>
                        }
                       
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/AdminMessage/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                      
                        
                    </a>
                </li>
               
                <li class="nav-item">
                    <a href="/AdminMessage/Draft" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                    </a>
                </li>

                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>

    <!-- /.card -->
</div>
